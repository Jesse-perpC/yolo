{
    "readers": {
        "tailfile": {
            "class": "tv.ustream.yolo.module.reader.TailFileReader",
            "file": "/tmp/tailtest*.txt",
            "readWhole": true
        },
        "stdin": {
            "class": "tv.ustream.yolo.module.reader.StdinReader"
        }
    },
    "parsers": {
        "regexp1": {
            "class": "tv.ustream.yolo.module.parser.RegexpParser",
            "regex": "(?i:(?<exceptionName>[a-zA-Z]+)exception value (?<val>\\d+(?:\\.\\d+)?))",
            "processors": {
                "console": {},
                "graphite": {
                    "keys": [
                        {
                            "key": "yolo.#HOSTNAME#.#exceptionName#",
                            "value": "#val#",
                            "multiplier": 1000
                        }
                    ]
                },
                "statsd": {
                    "keys": [
                        {
                            "type": "counter",
                            "key": "yolo.#HOSTNAME#.exceptionCount",
                            "value": 1
                        }
                    ]
                }
            }
        },
        "regexp2": {
            "class": "tv.ustream.yolo.module.parser.RegexpParser",
            "regex": "(?i:(?<errorName>[a-zA-Z]+)error value (?<val>\\d+(?:\\.\\d+)?))",
            "processors": {
                "graphite": {
                    "keys": [
                        {
                            "key": "yolo.error.#errorName#",
                            "value": "#val#"
                        }
                    ]
                }
            }
        },
        "passthru": {
            "class": "tv.ustream.yolo.module.parser.PassThruParser",
            "processors": {
                "console": {}
            },
            "enabled": true
        }
    },
    "processors": {
        "statsd": {
            "class": "tv.ustream.yolo.module.processor.StatsDProcessor",
            "prefix": "prefix",
            "host": "127.0.0.1",
            "port": 8125
        },
        "graphite": {
            "class": "tv.ustream.yolo.module.processor.graphite.GraphiteProcessor",
            "prefix": "prefix",
            "host": "127.0.0.1",
            "port": 2003
        },
        "console": {
            "class": "tv.ustream.yolo.module.processor.ConsoleProcessor"
        },
        "composite": {
            "class": "tv.ustream.yolo.module.processor.CompositeProcessor",
            "processors": ["statsd", "console"]
        }
    }
}
